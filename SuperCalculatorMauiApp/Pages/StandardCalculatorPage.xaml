<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SuperCalculatorMauiApp.Pages.StandardCalculatorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout
        HorizontalOptions="Center"
        Spacing="5">

        <Entry
            x:Name="CalculatorDisplay"
            FlowDirection="RightToLeft"
            Text="0" />

        <HorizontalStackLayout Spacing="5">
            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="SqrtButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="pierwiastek_60.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="Red"
                BorderWidth="1"
                Clicked="ClearEntryButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="ce.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="OrangeRed"
                BorderWidth="1"
                Clicked="ClearButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="c.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="DivisionOperationButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="dzielnik_60.png"
                WidthRequest="60" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="5">
            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="SevenNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="seven.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="EightNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="eight.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="NineNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="nine.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="MultiplicationOperationButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="mnoznik_60.png"
                WidthRequest="60" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="5">
            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="FourNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="four.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="FiveNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="five.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="SixNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="six.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="SubstractionOperationButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="minus_60.png"
                WidthRequest="60" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="5">
            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="OneNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="one.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="TwoNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="two.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="ThreeNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="three.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="AdditionOperationButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="plus_60.png"
                WidthRequest="60" />
        </HorizontalStackLayout>

        <HorizontalStackLayout Spacing="5">
            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="PlusMinusButton_Clicked"
                CornerRadius="0"
                FontSize="Header"
                HeightRequest="60"
                Text="Â±"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="ZeroNumberButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="zero.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="DecimalButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="decimal_60.png"
                WidthRequest="60" />

            <Button
                Padding="0"
                BorderColor="SkyBlue"
                BorderWidth="1"
                Clicked="EqualButton_Clicked"
                CornerRadius="0"
                HeightRequest="60"
                ImageSource="rownasie_60.png"
                WidthRequest="60" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>